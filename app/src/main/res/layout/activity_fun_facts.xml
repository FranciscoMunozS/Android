<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51b46d"
    android:padding="50dp"
    android:id="@+id/relativeLayout"
    tools:context=".FunFactsActivity">

    <TextView
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Did you know?"
        android:textColor="#80ffffff"
        android:textSize="24sp" />

    <Button
        android:id="@+id/showFactButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:background="#FFFFFF"
        android:text="Show another Fun Fact"
        android:textColor="#51b46d"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="523dp" />

    <TextView
        android:id="@+id/factTextView"
        android:layout_width="357dp"
        android:layout_height="123dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="169dp"
        android:text="Lorem ipsum dolor amet asymmetrical disrupt sartorial,
        try-hard retro coloring book air plant kinfolk palo santo vice. Pabst umami thundercats,
        try-hard beard lyft DIY mixtape."
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="71dp" />

</RelativeLayout>